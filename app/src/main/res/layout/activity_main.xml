<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.herokuapp.raydashapp.helloandroid.MainActivity"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/imgHieght"
            android:src="@drawable/udacity_contact"
            android:scaleType="centerCrop"
      />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name"
            android:paddingLeft="@dimen/leftPad"
            android:paddingTop="@dimen/lineMargin"
            android:textStyle="bold|italic" />
        <Button
            android:id="@+id/buttonCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel"
            android:layout_marginLeft="@dimen/leftPad"
            android:layout_marginTop="@dimen/lineMargin"
            android:textColor="@color/websiteLink"
            android:onClick="callUdacity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/website"
            android:paddingLeft="@dimen/leftPad"
            android:paddingTop="@dimen/lineMargin"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColorLink="@color/websiteLink"
            android:textStyle="bold|italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:autoLink="map"
            android:paddingLeft="@dimen/leftPad"
            android:paddingTop="@dimen/lineMargin"
            android:textColorLink="@color/websiteLink"
            android:textStyle="bold|italic"/>

    </LinearLayout>
</ScrollView>